<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_cons">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_cons_iv"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:src="@drawable/cons1"
        app:civ_border_color="@color/brown"
        app:civ_border_width="4dp" />


    <TextView
        android:id="@+id/item_cons_tv"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/item_cons_iv"
        android:layout_marginTop="3dp"
        android:text="@string/cons_eg"
        style="@style/MyConsTextStyle"/>

</RelativeLayout>
