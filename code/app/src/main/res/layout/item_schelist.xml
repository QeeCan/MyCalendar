<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:id="@+id/rl_item_sche"
    android:background="@color/back_white">

    <TextView
        android:id="@+id/item_tv_schecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日程内容"
        style="@style/MyTextStyle"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/item_tv_schedatetime"
        android:layout_below="@id/item_tv_schecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sche_time_eg"
        style="@style/MyTimeTextStyle"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/item_tv_schetag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyTagTextStyle"
        android:text="@string/sched_tag_eg"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>