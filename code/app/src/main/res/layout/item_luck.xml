<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_white"
    android:layout_margin="5dp">
    <TextView
        android:id="@+id/item_luck_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/tv_type"
        style="@style/MyLuckTypeTVStyle"
         />

    <TextView
        android:id="@+id/item_luck_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_luck_tv_title"
        android:layout_marginTop="5dp"
        android:text="@string/tv_details"
        style="@style/MyLuckContentTVStyle"
    />

</RelativeLayout>