<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_sche"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/MyToolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24">
        <TextView
            android:id="@+id/tv_sche_title"
            style="@style/MyTBTextStyle"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:text="@string/cal_list_name" />
        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_sche"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyc_sche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_sche"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtn_sche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        fab:fab_colorNormal="@color/dark_green"
        fab:fab_colorPressed="@color/light_green"
        fab:fab_icon="@drawable/ic_baseline_add_24"/>


</RelativeLayout>


